<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/soundBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_menu_button_round"
        android:padding="8dp"
        android:focusable="true"
        android:clickable="true"
        android:src="@drawable/ic_music_white_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settingBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/selector_menu_button_round"
        android:padding="8dp"
        android:src="@drawable/ic_setting_white_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="得分：16"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/soundBtn"
        app:layout_constraintStart_toEndOf="@id/soundBtn"
        app:layout_constraintTop_toTopOf="@id/soundBtn"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/userBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/selector_menu_button_round"
        android:padding="8dp"
        android:src="@drawable/ic_face_white_24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingBtn"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>