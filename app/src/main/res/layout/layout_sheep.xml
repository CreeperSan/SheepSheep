<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_alllayout"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/grassLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <com.coorchice.library.SuperTextView
        android:id="@+id/stv_container"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="76dp"
        app:stv_corner="5dp"
        app:stv_solid="#8d5e2a"
        app:stv_stroke_color="#b8843e"
        app:stv_stroke_width="5dp"/>

    <ImageView
        android:src="@mipmap/bg_queue"
        android:id="@+id/fenceView"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:paddingStart="-2dp"
        android:paddingEnd="-2dp"
        android:paddingBottom="-20dp"
        android:layout_marginTop="-6dp"
        android:layout_alignTop="@id/stv_container"
        android:layout_alignStart="@id/stv_container"
        android:layout_alignEnd="@id/stv_container"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/toolLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/toolBringToOutside"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@mipmap/img_tool_bring_out" />

        <ImageView
            android:id="@+id/toolRecall"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@mipmap/img_tool_recall" />

        <ImageView
            android:id="@+id/toolShuffle"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@mipmap/img_tool_shuffle" />

    </LinearLayout>

</RelativeLayout>
