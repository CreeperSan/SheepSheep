<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textStyle="bold"
        android:textSize="42sp"
        android:textColor="#000000"
        android:text="选择关卡"
        android:gravity="center"
        android:id="@+id/titleIV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="128dp"/>

    <TextView
        android:focusable="true"
        android:clickable="true"
        android:gravity="center"
        android:textSize="42sp"
        android:textColor="@color/white"
        android:background="@drawable/selector_menu_button"
        app:layout_constraintTop_toBottomOf="@id/titleIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="1"
        android:id="@+id/level1TV"
        android:layout_width="78dp"
        android:layout_height="78dp"/>

    <TextView
        android:focusable="true"
        android:clickable="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="42sp"
        android:textColor="@color/white"
        android:background="@drawable/selector_menu_button"
        app:layout_constraintTop_toBottomOf="@id/level1TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="2"
        android:id="@+id/level2TV"
        android:layout_width="78dp"
        android:layout_height="78dp"/>

    <ImageView
        android:id="@+id/lockLevel2"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_lock_white_24"
        app:layout_constraintEnd_toEndOf="@id/level2TV"
        app:layout_constraintTop_toTopOf="@id/level2TV"
        android:layout_width="18dp"
        android:layout_height="18dp"/>

    <TextView
        android:focusable="true"
        android:clickable="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="46dp"
        android:paddingEnd="46dp"
        app:layout_constraintBottom_toTopOf="@id/sheepIv"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:background="@drawable/selector_menu_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/backBtn"
        android:text="返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/sheepIv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/ic_award_sheep3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/head"
        layout="@layout/include_head_button_group"/>

</androidx.constraintlayout.widget.ConstraintLayout>